File: .github/workflows/move-folder.yml
---
name: Rename Folder and Push

on:
  workflow_dispatch:  # Allows you to manually trigger the workflow

jobs:
  rename-and-push:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Rename folder
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"

          if [ -d "old_folder" ]; then
            git mv data/bluesky attic/data/bluesky
          else
            echo "Folder 'old_folder' does not exist"
            exit 1
          fi

      - name: Commit changes
        run: |
          git add .
          git commit -m "Rename folder from old_folder to new_folder" || echo "No changes to commit"

      - name: Push changes
        run: git push



---
File: .github/workflows/summary-for-llm.yml
---
name: Llamero Summarization

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  generate-summaries:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      pull-requests: write

    steps:
    - uses: actions/checkout@v4
      with:
        fetch-depth: 1

    - name: Install llamero
      run: touch requirements.txt

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        #cache: 'pip'

    - name: Install llamero
      run: pip install llamero

    - name: Generate summaries
      run: |
        llamero summarize all
        #llamero tree --output summaries/tree.md


